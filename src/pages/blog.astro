---
import BlogPost from "../components/BlogPost.astro";
import BaseLayout from '../layouts/BaseLayout.astro';
const allPosts = await Astro.glob("../pages/posts/*.md");


const pageTitle = "Mi Blog";
---



<BaseLayout pageTitle={pageTitle}>
    <h1>{pageTitle} de Astro aprendizaje</h1>
    <p>Aquí es donde publicaré sobre mi viaje de aprendizaje Astro.</p>

  <ul>
    {allPosts.map(post => (
        <BlogPost image={post.frontmatter.image} url={post.url} title={post.frontmatter.title}/>
    ))}
  </ul>
</BaseLayout>
